<div class="row">
    <div class="col-xs-12">
        <div class="jumbotron">
            <%= @username %>
        </div>

    </div>
</div>



<div class="row">
    <div class="col-xs-3">
      <div class="panel panel-default">
        <div class="panel-body">
          <p>Other Users</p>
          <p>   <% for @u in @toFollow do %>
              <a href="/user/<%= @u.username %>" > <%= @u.username %> </a>
              <% end %> </p>
    </div>
  </div>
</div>



<div class="col-xs-6">
      <%= render '/components/post_form' %> <br> <br>

  <% for @p in @posts %>

  <div class="panel panel-default post-panel">
    <div class="panel-body row">
            <div class="col-sm-1">
                <img class="rounded-image" src="/avatar.png" height="40px" width="40px" > </img>
            </div>

            <div class="col-sm-11">
              <p class="post-title"> <span class="post-owner"> <%= User.find(@p.user_id).username %> </span> - <span class="post-created" > <%= @p.created_at.to_formatted_s(:short) %> </span> </p>
              <p class="post-content"><%= @p.content %></p>
            </div>

            <div class="col-sm-12">
           <!-- <p class="post-links">
