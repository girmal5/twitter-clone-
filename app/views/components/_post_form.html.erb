<div class="panel panel-default post-form-panel">
  <div class="panel-body row">
          <div class="col-sm-1">
              <img class="rounded-image" src="/avatar.png" height="30px" width="30px" > </img>
          </div>

          <div class="col-sm-11">


              <%= form_for(@newPost) do |f| %>



                    <div class="field" style="margin-left: 10px;">

                      <%= f.text_field :content, autofocus: true, class: "form-control" %>
                      <span type="button" class="btn btn-submit" style="float:right; margin-top: 3px;"><%= f.submit "Add Post", class:"btn btn-primary navbar-btn" %> </span>
                    </div>



  </div>

              <% end %>



  </div>
</div>
